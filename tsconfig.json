{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "strictNullChecks": true, // Bật kiểm tra kiểu null và undefined
    "noImplicitAny": true, // Bật kiểm tra kiểu any ẩn
    "strictFunctionTypes": true, // Bật kiểm tra kiểu cho các hàm
    "strictPropertyInitialization": true, // Bật kiểm tra khởi tạo thuộc tính
    "noImplicitThis": true, // Bật kiểm tra this ẩn
    "alwaysStrict": true, // Sử dụng "use strict" trong tất cả các tệp
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
